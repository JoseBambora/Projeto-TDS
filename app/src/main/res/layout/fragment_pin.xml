<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.pins.PinFragment"
    android:background="?attr/Primario">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_marginTop="12dp">
                <TextView
                    android:id="@+id/namePin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:textColor="?attr/Secundario"
                    android:textStyle="bold|italic"/>

                <ImageView
                    android:id="@+id/imagePin"
                    android:tag="image_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="40dp"
                    android:maxHeight="40dp"
                    android:contentDescription="@string/pin_image" />

                <VideoView
                    android:id="@+id/videoPin"
                    android:layout_width="150dp"
                    android:layout_height="100dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <android.widget.Button
                    android:id="@+id/playImagem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_image"
                    android:textColor="@color/white"
                    android:layout_marginEnd="10dp" />
                <android.widget.Button
                    android:id="@+id/playAudio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_sound"
                    android:textColor="@color/white"
                    android:layout_marginEnd="10dp" />
                <android.widget.Button
                    android:id="@+id/playVideo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_video"
                    android:textColor="@color/white"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/infotv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:textColor="?attr/Secundario"
                    android:textStyle="bold|italic"
                    android:text="@string/informa_es"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    card_view:cardCornerRadius="15dp"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/Texto2"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_margin="8dp"
                            android:text="@string/nome_pin"/>

                        <TextView
                            android:id="@+id/pinName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="?attr/Texto1"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_margin="8dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    card_view:cardCornerRadius="15dp"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/Texto2"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_margin="8dp"
                            android:text="@string/localiza_o_pin"/>

                        <TextView
                            android:id="@+id/pinLocation"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="?attr/Texto1"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_margin="8dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    card_view:cardCornerRadius="15dp"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/Texto2"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_margin="8dp"
                            android:text="@string/descri_o"/>

                        <TextView
                            android:id="@+id/pinDesc"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="?attr/Texto1"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_margin="8dp"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/extraTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:textColor="?attr/Secundario"
                    android:textStyle="bold|italic"
                    android:text="@string/informa_o_extra"/>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                card_view:cardCornerRadius="15dp"
                card_view:cardElevation="5dp"
                card_view:cardUseCompatPadding="true">
                <TableLayout
                    android:id="@+id/relpinsTable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:background="?attr/Secundario"
                        android:padding="10dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/valor"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="?attr/Texto4"
                            android:gravity="center_horizontal"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/atributte"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="?attr/Texto4"
                            android:gravity="center_horizontal"/>
                    </TableRow>
                </TableLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</FrameLayout>