<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="?attr/Primario">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/braguia_guia_tur_stico"
            android:textSize="30sp"
            android:gravity="center"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textColor="?attr/Secundario"
            android:textStyle="bold|italic"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/logo"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            />

        <TextView
            android:id="@+id/textViewDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:lineSpacingMultiplier="1.2"
            android:paddingBottom="8dp"
            android:text="@string/braguia_your_virtual_guide_in_braga"
            android:textColor="?attr/Texto2"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <android.widget.Button
                android:id="@+id/buttonRegister"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn3"
                android:textColor="@color/white"
                android:text="@string/registar" />

            <android.widget.Button
                android:id="@+id/buttonLogin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn3"
                android:textColor="@color/white"
                android:text="@string/login" />

        </LinearLayout>

        <android.widget.Button
            android:id="@+id/buttonEmergency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn5"
            android:textColor="@color/white"
            app:iconGravity="textStart"
            android:text="@string/chamada_de_emerg_ncia"/>

        <android.widget.Button
            android:id="@+id/buttonTourRoutes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn3"
            android:textColor="@color/white"
            android:text="@string/localiza_o_e_navega_o" />

        <android.widget.Button
            android:id="@+id/buttonLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn3"
            android:textColor="@color/white"
            android:text="@string/conteudo_multim_dia"/>

        <android.widget.Button
            android:id="@+id/googleMaps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn3"
            android:textColor="@color/white"
            android:text="@string/google_maps"/>

        <android.widget.Button
            android:id="@+id/buttonPin1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn3"
            android:textColor="@color/white"
            android:text="@string/consultar_pin_1"/>

        <android.widget.Button
            android:id="@+id/userInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn6"
            android:textColor="@color/white"
            android:text="@string/utilizador_info"/>

        <TextView
            android:id="@+id/app_landing_page_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:lineSpacingMultiplier="1.2"
            android:paddingBottom="16dp"
            android:text="@string/app_landing_page_text"
            android:textColor="?attr/Texto2"
            android:textSize="16sp" />
        </LinearLayout>

    </FrameLayout>
</ScrollView>
